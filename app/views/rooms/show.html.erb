<div class="center_form">
  <div class= "col-md-8 col-md-offset-2 bg_new_color arrow arrow-s desc">
    <h2 class= "desc pad_0">Rooms list</h2>
    <% if @flat.num_rooms > @flat.rooms.count %>
      <%= link_to '+ CREATE NEW ROOM', new_user_flat_room_path(@user_id, @flat_id), class: "btn btn_form width_180 fright font" %>
    <% end %>
  </div>

  <div class= "col-md-8 col-md-offset-2 bg_color">
    <ul>
      <% @rooms.each do |room| %>
        <li class= "max_width rooms_list m_auto fleft txt_room mb m_room">
        <p>
          <%= image_tag room.room_photo.url(:large), class: "" %>
          </br>
          Price: <strong><%= room.price %> â‚¬</strong>
        </p>

        <%= link_to 'EDIT ROOM', edit_user_flat_room_path(@user_id, @flat.id, room.id), class: "btn btn_form margin_10 mb_10 width_180"%>
        <%= link_to 'DELETE ROOM', user_flat_room_path(@user_id, @flat.id, room.id), method: :delete, class: "btn btn_form margin_10 mb_10 width_180", data: { confirm: 'Are you sure' } %>
        </li>
      <% end %>
    </ul>

  </div>
</div>